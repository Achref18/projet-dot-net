@model IEnumerable<Complaint>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-6">
        <h1>Complaints</h1>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="User" asp-action="Create" class="btn btn-primary">Create</a>
    </div>
    <form asp-action="Index" method="get">
        <div class="form-group">
            <label for="name">Title:</label>
            <input style="width:30%" type="text" class="form-control" id="title" name="title">
            <br />
            <button  type="submit" class="btn btn-primary">Search</button>
    </form>
   
</div>
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.Id)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Title)
            </th>
          
            <th>
                @Html.DisplayNameFor(m => m.Status)
            </th>
         
            <th>Actions</th>

        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Status</td>
                <td>
                    <a asp-controller="User" asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    @{
                        if (!item.IsClosed)
                        {
                            <a asp-controller="User" asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Update</a>
                            <a asp-controller="User" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        }
                    }
                </td>
            </tr>
        }


        </tbody>
    </table>
</div>